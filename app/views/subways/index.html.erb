<% @subways.each do |subway| %>
  <tr>
    <td><%= subway.hour %></td>
    <td><%= subway.day %></td>
    <td><%= link_to 'Show', subway %></td>
    <td><%= link_to 'Edit', edit_subway_path(subway) %></td>
